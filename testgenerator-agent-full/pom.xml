<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>testgenerator-agent-full</artifactId>

	<parent>
		<groupId>de.nvg</groupId>
		<artifactId>testgenerator-parent</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>de.nvg</groupId>
			<artifactId>testgenerator-agent</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>de.nvg</groupId>
			<artifactId>testgenerator-core</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>de.nvg</groupId>
			<artifactId>testgenerator-proxy</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>de.nvg</groupId>
			<artifactId>testgenerator-generation</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>de.nvg</groupId>
			<artifactId>testgenerator-classdatamodel-rt</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>de.nvg</groupId>
			<artifactId>value-tracker</artifactId>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.0</version>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<finalName>testgenerator-agent-full</finalName>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<manifestEntries>
										<Class-Path>.</Class-Path>
										<Premain-Class>de.nvg.agent.ClassTransformerAgent</Premain-Class>
										<Build-Number>1</Build-Number>
									</manifestEntries>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>